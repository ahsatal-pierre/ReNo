
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String @unique
  password  String
  firstName String?
  lastName  String?
  
  tasks    Task[]

  @@map("users")
}

model Task {
  id        Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  overview    String?
  done        Boolean

  userId Int
  user User @relation(fields: [userId], references: [id])

  @@map("tasks")
}